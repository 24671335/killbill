<assembly>
    <id>notifications</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <!--<file>-->
        <!--<source>${project.build.directory}/${artifactId}-${version}-gemrepo.jar</source>-->
        <!--<destName>gemrepo.jar</destName>-->
        <!--</file>-->
        <file>
            <source>${basedir}/Gemfile</source>
            <destName>Gemfile</destName>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${basedir}/Gemfile.lock</source>
            <destName>Gemfile.lock</destName>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/gemrepo</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
            <outputDirectory>/gemrepo</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>true</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>
